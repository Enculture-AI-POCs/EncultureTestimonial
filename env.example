# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/testimonial-survey
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/testimonial-survey
MONGODB_URI=mongodb://localhost:27017/testimonial-survey

# Server Port
PORT=12345

# Optional: JWT Secret (if implementing authentication)
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here

# Environment (development/production)
NODE_ENV=development

# Optional: Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: CORS settings
CORS_ORIGIN=http://localhost:3000

# Optional: File upload settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Optional: Database settings
DB_NAME=testimonial-survey
DB_HOST=localhost
DB_PORT=27017

# Optional: Admin user settings (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123 